<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.ingbank.sample</groupId>
  <artifactId>predic8</artifactId>
  <packaging>bundle</packaging>
  <version>0.0.1-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>2.3.4</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>predic8-validator</Bundle-SymbolicName>
            <Bundle-Name>predic8-validator</Bundle-Name>
            <Import-Package>org.apache.synapse,org.apache.synapse.mediators</Import-Package>
            <Export-Package>com.ingbank.esb.mediator.rest</Export-Package>
            <DynamicImport-Package>*</DynamicImport-Package>
          </instructions>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <excludes>
                  <exclude>org.slf4j:*</exclude>
                </excludes>
              </artifactSet>
              <minimizeJar>false</minimizeJar>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.apache.synapse</groupId>
      <artifactId>synapse-core</artifactId>
      <version>2.1.3-wso2v11</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>org.wso2.securevault</artifactId>
          <groupId>org.wso2.securevault</groupId>
        </exclusion>
        <exclusion>
          <artifactId>synapse-commons</artifactId>
          <groupId>org.apache.synapse</groupId>
        </exclusion>
        <exclusion>
          <artifactId>synapse-tasks</artifactId>
          <groupId>org.apache.synapse</groupId>
        </exclusion>
        <exclusion>
          <artifactId>synapse-nhttp-transport</artifactId>
          <groupId>org.apache.synapse</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jms</artifactId>
          <groupId>javax.jms</groupId>
        </exclusion>
        <exclusion>
          <artifactId>amqp-client</artifactId>
          <groupId>com.rabbitmq.wso2</groupId>
        </exclusion>
        <exclusion>
          <artifactId>antlr-runtime</artifactId>
          <groupId>org.antlr</groupId>
        </exclusion>
        <exclusion>
          <artifactId>axis2-saaj</artifactId>
          <groupId>org.apache.axis2</groupId>
        </exclusion>
        <exclusion>
          <artifactId>handy-uri-templates</artifactId>
          <groupId>com.damnhandy</groupId>
        </exclusion>
        <exclusion>
          <artifactId>commons-lang</artifactId>
          <groupId>commons-lang</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jettison</artifactId>
          <groupId>org.codehaus.jettison.wso2</groupId>
        </exclusion>
        <exclusion>
          <artifactId>json-path</artifactId>
          <groupId>com.jayway.jsonpath</groupId>
        </exclusion>
        <exclusion>
          <artifactId>wso2eventing-api</artifactId>
          <groupId>org.wso2.eventing</groupId>
        </exclusion>
        <exclusion>
          <artifactId>axis2-adb</artifactId>
          <groupId>org.apache.axis2</groupId>
        </exclusion>
        <exclusion>
          <artifactId>sandesha2-core</artifactId>
          <groupId>org.apache.sandesha2</groupId>
        </exclusion>
        <exclusion>
          <artifactId>saxon-dom</artifactId>
          <groupId>net.sf.saxon</groupId>
        </exclusion>
        <exclusion>
          <artifactId>xalan</artifactId>
          <groupId>xalan</groupId>
        </exclusion>
        <exclusion>
          <artifactId>axis2-transport-local</artifactId>
          <groupId>org.apache.axis2</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
</project>

